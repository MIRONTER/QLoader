<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="300" d:DesignHeight="300"
             x:Class="QSideloader.Views.LoadingProgressRingView"
             Background="#40000000" >
    <Border Height="130" Width="130" HorizontalAlignment="Center" VerticalAlignment="Center"
            BorderBrush="#454545" BorderThickness="2" CornerRadius="6" Background="#1F1F1F" >
        <StackPanel>
            <ProgressRing x:Name="ProgressRing" Margin="0,24,0,0" IsEnabled="{Binding $parent[UserControl].IsVisible}" IsIndeterminate="True" />
            <TextBlock Margin="0,24,0,0" HorizontalAlignment="Center" Text="Loading..." />
        </StackPanel>
    </Border>
</UserControl>
