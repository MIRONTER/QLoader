    <Border BorderBrush="#171717"
            BorderThickness="0"
            Margin="4,0,4,4"
            CornerRadius="10"
            Background="#1F1F1F"
            IsVisible="{Binding IsDeviceConnected}">
        <Grid ColumnDefinitions="Auto,Auto,*,Auto" RowDefinitions="Auto,Auto,Auto,Auto">
            <aura:ProgressRing Grid.Column="0" Grid.Row="0"
                               Grid.ColumnSpan="3" Grid.RowSpan="4"
                               IsIndeterminate="{Binding IsBusy}"
                               IsVisible="False" />
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="20,12,0,0">
                Device Info:
            </TextBlock>
            <Image Grid.Row="1" Grid.Column="0"
                   Grid.RowSpan="3"
                   Source="../Assets/quest2.png"
                   Width="130"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,12" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                       VerticalAlignment="Center"
                       Text="{Binding FriendlyName}" />
            <StackPanel Grid.Row="2" Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock>Used:</TextBlock>
                <TextBlock Margin="4,0,0,0" Text="{Binding SpaceUsed}" />
                <TextBlock>GB</TextBlock>
                <TextBlock Margin="20,0,0,0">Free:</TextBlock>
                <TextBlock Margin="4,0,0,0" Text="{Binding SpaceFree}" />
                <TextBlock>GB</TextBlock>
            </StackPanel>
            <StackPanel Grid.Row="3" Grid.Column="1"
                        Orientation="Horizontal"
                        VerticalAlignment="Center">
                <TextBlock>Battery level:</TextBlock>
                <TextBlock Margin="4,0,0,0" Text="{Binding BatteryLevel}" />
                <TextBlock>%</TextBlock>
            </StackPanel>
            <Grid Grid.Row="0" Grid.Column="3"
                  Grid.RowSpan="4"
                  RowDefinitions="Auto,Auto" ColumnDefinitions="Auto"
                  MinWidth="500"
                  IsVisible="False">
                <StackPanel Grid.Row="0" Margin="0,16,0,0" Orientation="Horizontal">
                    <TextBlock Margin="0,0,4,0">Downloader status:</TextBlock>
                    <TextBlock TextWrapping="Wrap" Text="{Binding DownloaderStatus}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Margin="0,12,0,0" Orientation="Horizontal">
                    <TextBlock Margin="0,0,4,4">ADB status:</TextBlock>
                    <TextBlock TextWrapping="Wrap" Text="{Binding ADBStatus}" />
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>