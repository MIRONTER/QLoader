    <Border BorderBrush="#171717"
            BorderThickness="0"
            Margin="4,0,4,4"
            Height="130"
            CornerRadius="10"
            Background="#1F1F1F"
            IsVisible="{Binding IsDeviceConnected}">
        <Grid ColumnDefinitions="Auto,Auto,Auto,*" RowDefinitions="*,*,*,*">
            <aura:ProgressRing Grid.Column="0" Grid.Row="0"
                               Grid.ColumnSpan="3" Grid.RowSpan="4"
                               IsIndeterminate="{Binding IsBusy}"
                               IsVisible="False" />
            <TextBlock Grid.Row="0" Grid.Column="0"
                       Margin="20,12,0,0">
                Device Info:
            </TextBlock>
            <Image Grid.Row="1" Grid.Column="0"
                   Grid.RowSpan="3"
                   Source="/Assets/quest2.png"
                   Width="130"
                   Height="87"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,12"
                   IsVisible="{Binding IsQuest2}" />
            <Image Grid.Row="1" Grid.Column="0"
                   Grid.RowSpan="3"
                   Source="/Assets/quest1.png"
                   Width="130"
                   Height="87"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,12"
                   IsVisible="{Binding IsQuest1}" />
            <TextBlock Grid.Row="1" Grid.Column="1"
                       VerticalAlignment="Center"
                       Text="{Binding FriendlyName}" />
            <TextBlock Grid.Row="2" Grid.Column="1" VerticalAlignment="Center">
                <TextBlock.Text>
                    <MultiBinding StringFormat="{}Used: {0}GB      Free: {1}GB">
                        <Binding Path="SpaceUsed" />
                        <Binding Path="SpaceFree" />
                    </MultiBinding>
                </TextBlock.Text>
            </TextBlock>
            <TextBlock Grid.Row="3" Grid.Column="1" VerticalAlignment="Center"
                       Text="{Binding BatteryLevel, StringFormat={}Battery level: {0}%}" />
            <ComboBox Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Margin="8"
                      MinWidth="170"
                      PlaceholderText="Device list"
                      IsEnabled="{Binding IsDeviceSwitchEnabled}"
                      Items="{Binding DeviceList}"
                      SelectedItem="{Binding CurrentDevice}"
                      ToolTip.Tip="{Binding TrueSerial, StringFormat={}Device list&#x0a;Current device serial: {0}}">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock Text="{Binding}" />
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Grid.Row="0" Grid.RowSpan="4" Grid.Column="2" Margin="8" IsVisible="{Binding !IsDeviceWireless}"
                    Command="{Binding EnableWirelessAdb}">
                Enable Wireless ADB
            </Button>
        </Grid>
    </Border>
</UserControl>