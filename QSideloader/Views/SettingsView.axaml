<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:QSideloader.ViewModels"
             xmlns:views="clr-namespace:QSideloader.Views"
             mc:Ignorable="d" d:DesignWidth="850" d:DesignHeight="700"
             x:Class="QSideloader.Views.SettingsView">
    <ScrollViewer>
        <StackPanel Orientation="Vertical" IsEnabled="True">
            <views:DeviceSettingsView Margin="8" />
            <views:SideloaderSettingsView Margin="8" />
        </StackPanel>
    </ScrollViewer>
</UserControl>